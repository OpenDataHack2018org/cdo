@Title     = Multi-year seasonally standard deviation

@BeginDescription
@IfMan
o(1,x) = std{i(t,x), month(i(t)) = 12, 01, 02}
o(2,x) = std{i(t,x), month(i(t)) = 03, 04, 05}
o(3,x) = std{i(t,x), month(i(t)) = 06, 07, 08}
o(4,x) = std{i(t,x), month(i(t)) = 09, 10, 11}
@EndifMan
@IfDoc
@BeginMath
\begin{array}{c}
o(\mbox{1},x) = \mbox{\bf std}\{i(t,x), \mbox{month}(i(t)) = \mbox{12, 01, 02}\} \\
o(\mbox{2},x) = \mbox{\bf std}\{i(t,x), \mbox{month}(i(t)) = \mbox{03, 04, 05}\} \\
o(\mbox{3},x) = \mbox{\bf std}\{i(t,x), \mbox{month}(i(t)) = \mbox{06, 07, 08}\} \\
