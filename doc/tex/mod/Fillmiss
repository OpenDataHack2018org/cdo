@BeginModule
@NewPage
@Name      = Fillmiss
@Title     = Fill missing values
@Section   = Miscellaneous
@Class     = Miscellaneous
@Arguments = ifile ofile
@Operators = fillmiss fillmiss2
@EndModule


@BeginOperator_fillmiss
@Title     = Fill missing values

@BeginDescription
Fill missing values by bilinear interpolation of the neightbors.
@EndDescription
@EndOperator


@BeginOperator_fillmiss2
@Title     = Fill missing values
@Parameter = [maxiter]

@BeginDescription
Fill missing values by using the neares value from up/down/left/right neightbors. 
@EndDescription
@EndOperator


@BeginParameter
@Item = maxiter
INTEGER  Number of iterations to perform this nearest neightbors replacement
@EndParameter
